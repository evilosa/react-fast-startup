{
  "name": "react-fast-startup",
  "version": "0.0.18",
  "description": "react-fast-startup React component",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component --copy-files",
    "clean": "nwb clean-module && nwb clean-demo",
    "demo": "nwb serve-react-demo",
    "test": "jest --coverage",
    "test:clean": "jest",
    "test:watch": "jest --watch",
    "start": "start-storybook -p 4001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook -o ./.storybook/dist",
    "jest": "npm-run-all -p demo test",
    "jest:watch": "npm-run-all -p demo test:watch",
    "jest:coverage": "npm-run-all -p demo test:coverage"
  },
  "dependencies": {
    "color": "^3.0.0",
    "radium": "^0.21.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.3.12",
    "@storybook/react": "^3.3.12",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "codecov.io": "^0.1.6",
    "coveralls": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.17.0",
    "express": "^4.16.2",
    "jest": "^22.1.4",
    "jest-image-snapshot": "^2.3.0",
    "navalia": "^1.2.0",
    "nwb": "0.21.x",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0"
  },
  "author": "Bozhkov Alex <bojkov@sorc.ru> (https://github.com/evilosa)",
  "homepage": "https://github.com/evilosa/react-fast-startup",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evilosa/react-fast-startup.git"
  },
  "keywords": [
    "react-component"
  ],
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/jest.transform.js"
    },
    "setupFiles": [
      "./tests/jestSetup.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setupTestFramework.js",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/es/",
      "<rootDir>/lib/",
      "<rootDir>/umd/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/es/",
      "<rootDir>/lib/",
      "<rootDir>/umd/"
    ]
  }
}
